<h1>User Detail</h1>
<dl>
  <dt>UserName</dt>
  <dd><%= @user.username %></dd>
  <br/>
  <dt>Email Address</dt>
  <dd><%= @user.email_address %></dd>
</dl>


<h2>Recent bids</h2>

<%= for bid <- @bids do %>
  <p>
    <strong><%=  bid.inserted_at %></strong>
    <%=  integer_to_currency(bid.amount) %>
    <em><%= link bid.item.title, to: Routes.item_path(@conn, :show, bid.item)%></em>
    for
  </p>
<% end %>
